{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~core/*": ["../core/src/*"],
      "~viz/*": ["../viz/src/*"],
      "@hitachivantara/uikit-react-core": ["../core/src"],
      "@hitachivantara/uikit-react-icons": ["../icons/src"],
      "@hitachivantara/uikit-react-lab": ["../lab/src"],
      "@hitachivantara/uikit-react-shared": ["../shared/src"],
      "@hitachivantara/uikit-react-viz": ["../viz/src"],
      "@hitachivantara/uikit-styles": ["../styles/src"]
    },
    "noImplicitAny": false,
    "preserveSymlinks": true
  },
  "exclude": ["node_modules"]
}
