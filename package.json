{
  "name": "hv-uikit-react",
  "private": true,
  "author": "Hitachi Vantara UI Kit Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "doc": "pnpm --filter ./apps/docs dev",
    "clean": "pnpm -r clean",
    "build": "pnpm --filter './packages/**' build",
    "build:storybook": "storybook build -o dist -c .config/storybook",
    "build:doc": "pnpm --filter ./apps/docs build",
    "test": "pnpm --filter './packages/**' test",
    "test:a11y": "node scripts/a11y-report",
    "test:eyes": "npx eyes-storybook -f .config/applitools.config.js",
    "coverage": "pnpm --filter './packages/**' coverage",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "npm run lint -- --fix",
    "lint-staged": "lint-staged",
    "typecheck": "pnpm --filter './packages/**' typecheck",
    "depcheck": "npx -y owasp-dependency-check --project uikit -o reports --cveStartYear 2015",
    "publish:test": "lerna publish --conventional-graduate --yes --no-git-tag-version --no-push",
    "publish:release": "lerna publish --conventional-graduate --yes",
    "publish:next": "lerna publish --conventional-prerelease --yes --preid next --dist-tag next",
    "prepare": "npx husky install .config/husky"
  },
  "devDependencies": {
    "@applitools/eyes-storybook": "^3.44.3",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@emotion/core": "^11.0.0",
    "@emotion/css": "^11.11.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@hitachivantara/eslint-config": "workspace:*",
    "@hitachivantara/tsconfig": "workspace:*",
    "@hitachivantara/uikit-styles": "workspace:*",
    "@mdx-js/react": "^2.3.0",
    "@mui/material": "^5.14.18",
    "@playwright/test": "^1.39.0",
    "@storybook/addon-a11y": "^7.5.3",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/core-common": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/leaflet": "^1.9.8",
    "@types/lodash": "^4.14.201",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.32.0",
    "arquero": "^5.2.0",
    "clsx": "^1.2.1",
    "echarts": "^5.4.3",
    "echarts-for-react": "^3.0.2",
    "formik": "^2.4.5",
    "html-react-parser": "^3.0.16",
    "jsdom": "^21.1.2",
    "leaflet": "^1.9.4",
    "lerna": "^7.4.2",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-charts": "^4.0.1",
    "react-leaflet": "^4.2.1",
    "reactflow": "^11.10.1",
    "remark-gfm": "^3.0.1",
    "storybook": "^7.5.3",
    "storybook-a11y-report": "^0.0.20",
    "swr": "^2.2.4",
    "typescript": "^4.9.5",
    "uid": "^2.0.2",
    "usehooks-ts": "^2.9.1",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.6.3",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "yup": "^1.3.2",
    "zustand": "^4.4.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ]
  }
}
