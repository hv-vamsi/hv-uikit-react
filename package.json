{
  "name": "next-ui",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "license": "Apache-2.0",
  "author": "Hitachi Vantara UI Kit Team",
  "scripts": {
    "dev": "storybook dev -p 6006 -c .config/storybook",
    "doc": "pnpm -F ./apps/docs run dev",
    "build": "lerna run build",
    "build:storybook": "storybook build -o dist -c .config/storybook",
    "build:doc": "pnpm -F ./apps/docs run build",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "lerna run typecheck",
    "publish:test": "lerna publish --conventional-graduate --yes --no-git-tag-version --no-push",
    "publish:release": "lerna publish --conventional-graduate --yes",
    "publish:next": "lerna publish --conventional-prerelease --yes --preid next --dist-tag next",
    "prepare": "husky install .config/husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@hitachivantara/eslint-config": "workspace:*",
    "@linaria/rollup": "^4.5.4",
    "@linaria/vite": "^4.5.4",
    "@storybook/addon-actions": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "node-gyp-build": "^4.6.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.4.0",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.4.0"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "pnpm@8.6.10"
}
